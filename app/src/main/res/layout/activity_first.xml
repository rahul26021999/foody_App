<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rahul.foodzy.first">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="60dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="         Welcome To Foody            "
            android:ellipsize="marquee"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/marquee"
            android:background="#000000"
            android:textColor="#fff"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="15dp">


            <ImageView
                android:id="@+id/cart0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_shopping_cart_black_24dp" />

            <TextView
                android:id="@+id/cartqty0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fdee18"
                android:textSize="10dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignEnd="@+id/cart0"
                android:layout_alignBottom="@+id/cart0"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="20dp"
    android:background="@drawable/a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#61ffffff"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button"
            android:id="@+id/orderbutton"
            android:textColor="#fff"
            android:text="MENU"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:text="EVERYDAY VALUE OFFER"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
