<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.rahul.foodzy.cart">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:background="#000"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="15dp">


            <ImageView
                android:id="@+id/cart1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_shopping_cart_black_24dp" />

            <TextView
                android:id="@+id/cartqty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fdee18"
                android:textSize="10dp"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignEnd="@+id/cart1"
                android:layout_alignBottom="@+id/cart1"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:divider="#fff"
        android:background="#fff"
        android:id="@+id/list">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/emptyview"
        android:visibility="gone">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:alpha="0.8"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:src="@drawable/empty"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:clickable="true"
            android:textAlignment="center"
            android:textColor="#f73131"
            android:id="@+id/gotomenu"
            android:text="go to menu"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/orderbutton"
        android:layout_marginBottom="5dp"
        android:background="#f1bf1c"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="order"/>


</LinearLayout>
